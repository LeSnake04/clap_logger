root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 2

[*.rs]
max_line_length = 100

[{*.bash,*.sh,*.zsh}]
indent_style = space

[{*.markdown,*.md}]
indent_size = 4
tab_width = 3

[{*.toml,Cargo.lock,Cargo.toml.orig,Gopkg.lock,Pipfile,poetry.lock}]
indent_size = 4
indent_style = space
tab_width = 4